<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:paddingBottom="@dimen/list_item_top_line_padding_vertical"
        android:paddingTop="@dimen/list_item_padding_vertical"
        android:layout_marginEnd="@dimen/list_item_logo_margin_horizontal"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/list_item_logo_margin_horizontal" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingTop="@dimen/list_item_top_line_padding_vertical"
            android:textSize="@dimen/list_item_2nd_line_font_size"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingTop="@dimen/list_item_padding_vertical"
            android:textSize="@dimen/list_item_2nd_line_font_size"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/dueDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingTop="@dimen/list_item_padding_vertical"
            android:textSize="@dimen/list_item_2nd_line_font_size"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>